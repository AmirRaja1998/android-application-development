<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1st Number"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/editTextMainActivityFirstNumber"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="Type 1st number here"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2nd Number"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/editTextMainActivitySecondNumber"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="Type 2nd number here"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="To Count &amp; Show the Numbers:"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press 1 for Odd\nPress 2 for Even"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageViewMainActivityOdd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_one"/>
            <ImageButton
                android:id="@+id/imageButtonMainActivityEven"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_two"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Odd Numbers: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewMainActivityOdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ListView
            android:id="@+id/listViewMainActivityOdd"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Even Numbers: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewMainActivityEven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ListView
            android:id="@+id/listViewMainActivityEven"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>
</ScrollView>
