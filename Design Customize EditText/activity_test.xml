<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditTextActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"/>
            
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"/>
            
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Type text here 1"/>
            
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Type text here 2"
            android:gravity="center"/>
            
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Type text here 3"
            android:gravity="center"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Type text here 4"
            android:gravity="center"
            android:background="#F39C12"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Type text here 5"
            android:gravity="center"
            android:background="#F39C12"
            android:textColor="#FFFFFF"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Type text here 6"
            android:gravity="center"
            android:background="#F39C12"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Type text here 7"
            android:gravity="center"
            android:background="#F39C12"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:paddingTop="10dp"/>
            
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Type text here 8"
            android:gravity="center"
            android:background="#F39C12"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:minLines="2"
            android:maxLines="5"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Type text here 9"
            android:gravity="center"
            android:background="#F39C12"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:minLines="2"
            android:maxLines="5"
            android:visibility="invisible"/>


        <EditText
            android:id="@+id/editTextTestActivityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Type text here 10"
            android:gravity="center"
            android:background="#F39C12"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:minLines="2"
            android:maxLines="5"
            android:visibility="visible"/>

    </LinearLayout>

</ScrollView>
