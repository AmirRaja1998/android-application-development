<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click 2"
            android:textColor="#3498DB"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click 3"
            android:textColor="#3498DB"
            android:textSize="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click 4"
            android:textColor="#3498DB"
            android:textSize="25dp"
            android:textStyle="bold|italic"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click 5"
            android:textColor="#3498DB"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:background="#DAF7A6"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click 6"
            android:textColor="#3498DB"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:background="#DAF7A6"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click 7"
            android:textColor="#3498DB"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:background="#DAF7A6"
            android:layout_gravity="center"
            android:ems="5"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click 8"
            android:textColor="#3498DB"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:background="#DAF7A6"
            android:layout_gravity="center"
            android:ems="5"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:textColor="#3498DB"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:background="#DAF7A6"
            android:layout_gravity="center"
            android:ems="5"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_call_24"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:textColor="#3498DB"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:background="#DAF7A6"
            android:layout_gravity="center"
            android:ems="5"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_call_24"
            android:padding="10dp"/>

        <Button
            android:id="@+id/buttonTestActivityClickMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:textColor="#3498DB"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:background="#DAF7A6"
            android:layout_gravity="center"
            android:ems="5"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_call_24"
            android:padding="10dp"/>
            
    </LinearLayout>

</ScrollView>
