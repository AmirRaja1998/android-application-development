<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="100dp"
    android:paddingTop="200dp"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroupMainActivityGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonMainActivityMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:checked="true"
            android:text="Male"/>

        <RadioButton
            android:id="@+id/radioButtonMainActivityFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Female"/>

        <RadioButton
            android:id="@+id/radioButtonMainActivityOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Other"
            android:onClick="radioButtonOnClickListenerMainActivity"/>

    </RadioGroup>

    <Button
        android:id="@+id/buttonMainActivityGetGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Gender"/>

</LinearLayout>
