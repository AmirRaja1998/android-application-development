<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"/>

    <RadioGroup
        android:id="@+id/radioGroupMainActivityGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonMainActivityMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:checked="true"
            android:onClick="radioButtonOnClickListener"
            android:text="Male"/>
        <RadioButton
            android:id="@+id/radioButtonMainActivityFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:onClick="radioButtonOnClickListener"
            android:text="Female"/>
        <RadioButton
            android:id="@+id/radioButtonMainActivityOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:onClick="radioButtonOnClickListener"
            android:text="Other"/>

    </RadioGroup>

    <Button
        android:id="@+id/buttonMainActivitySubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"/>
    
</LinearLayout>
